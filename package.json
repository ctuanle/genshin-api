{
  "name": "genshin-api",
  "version": "1.0.0",
  "description": "Genshin Impact Characters API",
  "main": "dist/index.js",
  "author": "ctuanle",
  "license": "MIT",
  "scripts": {
    "start": "node -r dotenv/config .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:docker": "yarn build && docker build . -t genshin-api",
    "dev": "nodemon",
    "deploy:heroku": "heroku container:login && heroku container:push web --app=gshimpact-api && heroku container:release web --app=gshimpact-api",
    "prepare": "husky install"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "mongoose": "^6.3.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": ">=5.16.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.0",
    "lint-staged": "^13.0.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "typescript": "^4.7.2"
  },
  "nodemonConfig": {
    "watch": [
      "dist"
    ],
    "ext": "js",
    "exec": "yarn start",
    "delay": 2500
  },
  "lint-staged": {
    "*": [
      "yarn eslint",
      "yarn prettier -c"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "google",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "valid-jsdoc": "off",
      "require-jsdoc": "off",
      "new-cap": "off"
    },
    "ignorePatterns": [
      "node_modules",
      "dist",
      "*.lock"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  }
}
