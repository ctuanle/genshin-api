{
  "name": "genshin-api",
  "version": "1.0.0",
  "description": "Genshin Impact Characters API",
  "main": "dist/index.js",
  "author": "ctuanle",
  "license": "MIT",
  "scripts": {
    "start": "node -r dotenv/config .",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:docker": "yarn build && docker build . -t genshin-api",
    "dev": "nodemon",
    "deploy:heroku": "heroku container:login && heroku container:push web --app=gshimpact-api && heroku container:release web --app=gshimpact-api"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "mongoose": "^6.3.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.36",
    "nodemon": "^2.0.16",
    "typescript": "^4.7.2"
  },
  "nodemonConfig": {
    "watch": [
      "dist"
    ],
    "ext": "js",
    "exec": "yarn start",
    "delay": 2500
  }
}
